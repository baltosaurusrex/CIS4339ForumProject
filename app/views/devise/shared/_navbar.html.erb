<%-# channels = "http://localhost:3000/channels/" + @channel_id + "/App.config"%>

<nav class="navbar navbar-default" role="navigation">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to "WERL'd Home", root_url,class: "navbar-brand" %>
  </div>

  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

    <ul class="nav navbar-nav">

      <%if current_page?(root_path)%>
        <li class="active">
          <%= link_to "New Channel!",new_channel_path%>
        </li>

      <%elsif !current_page?(root_path) && !current_page?(posts_path) && !current_page?(new_channel_path) && !current_page?(new_post_path)%>
        <li class="active">
          <%= link_to 'New Post',new_post_path(channel_id: @channel)%>
        </li>
      <%else%>
          <p></p>
      <%end%>

    </ul>

    <%if current_page?(root_path) %>
      <%= form_tag search_channels_path do %>
        <input Class="search full-width" id="searchbar" name="query" placeholder="Search Channel" type="text" autocomplete="off">
      <%end%>

    <% elsif !current_page?(root_path) && !current_page?(posts_path) && !current_page?(new_channel_path) && !current_page?(new_post_path)%>
        <%= form_tag search_posts_path do%>
            <input Class="search full-width" id="searchbar" name="query" placeholder="Search Post" type="text" autocomplete="off">
        <%end%>
    <% elsif @post_id.present? %>
        <%= form_tag search_posts_path do%>
          <input Class="search full-width" id="searchbar" name="query" placeholder="Search comments" type="text" autocomplete="off">
        <%end%>

    <%end%>

    <ul class="navbar-nav navbar-right">

      <% if user_signed_in? %>
          <li>
            <%= link_to current_user.email, edit_user_registration_path%>
          </li>
          <li>
            <%= link_to "Logout", destroy_user_session_path%>
          </li>
      <%else %>
          <li>
            <%= link_to "Sign Up", new_user_registration_path %>
          </li>
          <li>
            <%= link_to "Login", new_user_session_path %>
          </li>
      <%end %>

    </ul>

  </div>
</nav>