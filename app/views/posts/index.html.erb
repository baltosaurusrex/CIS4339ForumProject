<p id="notice"><%= notice %></p>

<h1>Posts</h1>



<table>
  <thead>
    <tr>
      <th>Channel</th>
      <th>Name</th>
      <th>Content</th>
      <th>poster</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to Channel.find(post.channel_id).name, channel_path(post.channel_id) %></td>
        <td><%= link_to post.title, post %></td>
        <td><%= post.content %></td>
        <td><%= User.find(post.user_id).email %></td>

        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
